{% extends 'base.html.twig' %}

{% block body %}
  <style>
    .example-wrapper {
      margin: 1em auto;
      max-width: 800px;
      width: 95%;
      font: 18px/1.5 sans-serif;
    }
    .example-wrapper code {
      background: #f5f5f5;
      padding: 2px 6px;
    }
  </style>

  <script src="https://accounts.google.com/gsi/client" async></script> {# SSO Google #}

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-header bg-secondary text-white text-center">
            {% if app.request.pathInfo == '/register' %}
              <h4>Enregistrez-vous</h4>
            {% else %}
              <h4>Inscrivez-vous</h4>
            {% endif %}
          </div>
          <div class="card-body">
            <div class="text-center">
              <div id="g_id_onload" data-client_id="{{ app.request.server.get('GOOGLE_CLIENT_ID') }}" data-login_uri="{{ path('google_login') }}" data-auto_prompt="false"></div>
              <div class="g_id_signin" data-type="standard" data-size="large" data-theme="outline" data-text="sign_in_with" data-shape="rectangular" data-logo_alignment="left"></div>
              {% if app.request.pathInfo == '/register' %}
                <a class="text-dark text-decoration-none mt-2 d-block" href="/login">Déjà un compte ? Se connecter</a>
              {% else %}
                <a class="text-dark text-decoration-none mt-2 d-block" href="/register">Pas de compte ? S'inscrire</a>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
