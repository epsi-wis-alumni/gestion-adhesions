{% extends 'base.html.twig' %}

{% block body %}
  <style>
    .example-wrapper {
      margin: 1em auto;
      max-width: 800px;
      width: 95%;
      font: 18px/1.5 sans-serif;
    }
    .example-wrapper code {
      background: #f5f5f5;
      padding: 2px 6px;
    }
  </style>

  <script src="https://accounts.google.com/gsi/client" async></script> {# SSO Google #}

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-header bg-secondary text-white text-center">
            {% if app.request.pathInfo == '/register' %}
              <h4>Enregistrez-vous</h4>
            {% else %}
              <h4>Inscrivez-vous</h4>
            {% endif %}
          </div>
          <div class="card-body">
            <div class="text-center">
              <a href="{{ path('hwi_oauth_service_redirect', { service: 'google' }) }}" class="btn btn-light">Google</a>
              {% if app.request.pathInfo == '/register' %}
                <a class="text-dark text-decoration-none mt-2 d-block" href="/login">Pas de compte ? S'inscrire</a>
              {% else %}
                <a class="text-dark text-decoration-none mt-2 d-block" href="/register">Déjà un compte ? Se connecter</a>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
