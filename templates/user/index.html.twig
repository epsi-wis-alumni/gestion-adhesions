{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<a class="btn btn-primary" href="{{ path('app_user_login') }}">Add</a>
<table class="table table-striped table-sm mt-5">
    <thead>
        <tr>
            <th class="align-middle">id</th>
            <th class="align-middle">email</th>
            <th class="align-middle">password</th>
            <th class="align-middle">lastname</th>
            <th class="align-middle">firstname</th>
            <th class="align-middle">company</th>
            <th class="align-middle">job_title</th>
            <th class="align-middle">action</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
            <tr>
                <td class="align-middle">{{ user.id }}</td>
                <td class="align-middle">{{ user.email }}</td>
                <td class="align-middle">{{ user.password }}</td>
                <td class="align-middle">{{ user.lastname }}</td>
                <td class="align-middle">{{ user.firstname }}</td>
                <td class="align-middle">{{ user.company }}</td>
                <td class="align-middle">{{ user.jobTitle }}</td>
                <td class="d-flex justify-content-center align-items-center gap-1">
                    <a class="btn btn-primary" href="{{ path('app_user_update', { 'id': user.id }) }}">Edit</a>
                    {% include "user/_delete.html.twig" %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun untilisateur</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}













