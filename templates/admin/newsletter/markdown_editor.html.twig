<label for="{{ form.body.vars['id'] }}">
  {{ form.body.vars['name']|capitalize }}
</label>

<ul class="nav nav-tabs mt-2" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="write-tab" data-bs-toggle="tab" data-bs-target="#write-tab-pane" type="button" role="tab" aria-controls="write-tab-pane" aria-selected="true">Écrire</button>
  </li>
  
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="preview-tab" data-bs-toggle="tab" data-bs-target="#preview-tab-pane" type="button" role="tab" aria-controls="preview-tab-pane" aria-selected="false">Aperçu</button>
  </li>
</ul>

<div class="tab-content align-items-stretch row mb-2" id="myTabContent" data-controller="markdown">
  <div class="tab-pane fade show active col mb-0" id="write-tab-pane" role="tabpanel" aria-labelledby="write-tab" tabindex="0">
    {{ form_row(form.body) }}
  </div>
  
  <div class="tab-pane fade" id="preview-tab-pane" role="tabpanel" aria-labelledby="preview-tab" tabindex="0">
    <div class="overflow-y-scroll markdown-form-render-container form-control p-3" style="max-height: 25rem; min-height: 14.09rem;"  data-markdown-target="preview"></div>
  </div>
</div>