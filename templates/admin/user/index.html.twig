{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<table class="table table-striped table-sm mt-5">
    <thead class="table-bordered">
        <tr class="text-center">
            <th class="align-middle rounded-start">id</th>
            <th class="align-middle">email</th>
            <th class="align-middle">lastname</th>
            <th class="align-middle">firstname</th>
            <th class="align-middle">company</th>
            <th class="align-middle">job_title</th>
            <th class="align-middle rounded-end">action</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
            <tr>
                <td class="align-middle">{{ user.id }}</td>
                <td class="align-middle">{{ user.email }}</td>
                <td class="align-middle">{{ user.lastname }}</td>
                <td class="align-middle">{{ user.firstname }}</td>
                <td class="align-middle">{{ user.company }}</td>
                <td class="align-middle">{{ user.jobTitle }}</td>
                <td class="d-flex justify-content-center align-items-center gap-1">
                    <a class="btn btn-primary" href="{{ path('app_admin_user_update', { 'id': user.id }) }}">Modifier</a>
                    {% include "admin/user/_delete.html.twig" %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" class="text-center">Aucun utilisateur</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
